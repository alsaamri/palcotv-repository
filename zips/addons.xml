<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon
  id="plugin.video.palcotv"
  version="0.2.6"
  name="palcoTV"
  provider-name="Juarrox">
  <requires>
   <import addon="xbmc.python" version="2.1.0"/>
   <import addon="script.common.plugin.cache" version="0.9.1"/>
  </requires>
  <extension
    point="xbmc.python.pluginsource"
    library="default.py">
   <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary>Play videos of different sports streaming sites</summary>
    <description>Play videos of different sports streaming sites</description>
    <platform>all</platform>
  </extension>
</addon>

<addon id="repository.palcotv" name="palcoTV Repository" version="1.0" provider-name="Juarrox">
	<extension point="xbmc.addon.repository" name="palcoTV Addon Repository">
		<info compressed="false">http://github.com/Juarrox/palcotv-repository/raw/master/addons.xml</info>
		<checksum>http://github.com/Juarrox/palcotv-repository/raw/master/addons.xml.md5</checksum>
		<datadir zip="true">http://github.com/Juarrox/palcotv-repository/raw/master/zips</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Instalación de palcoTV</summary>
		<description>Descarga e instala el addon palcoTV para XBMC. Para más información entra en http://palcotv.blogspot.com.es</description>
		<platform>all</platform>
	</extension>
</addon>
</addons>
