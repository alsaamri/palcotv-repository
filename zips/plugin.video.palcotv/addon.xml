<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.palcotv"
    name="palcotv"
    version="0.2.6"
    provider-name="palcotv">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="es">palcoTV</summary>
    <description lang="es">Biblioteca de listas de canales de televisión en formato M3U y XML</description>
    <summary lang="en">TV on demand (Spanish)</summary>
    <description lang="en">This plugin lets you watch inside XBMC TV channels.</description>
    <platform>all</platform>
  </extension>
</addon>
